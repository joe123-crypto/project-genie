rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Anyone can read posts, but only signed-in users can create/edit them.
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Anyone can read likes, but only signed-in users can create/edit them.
    match /likes/{likeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read shared images, but only signed-in users can create them.
    match /sharedImages/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users can only create their own saved images and can only read their own.
    match /savedImages/{imageId} {
      allow create: if request.auth != null;
      allow read: if request.auth.uid == resource.data.userId;
    }

    // Anyone can read filters and outfits, but only authenticated users can create/edit them.
    match /filters/{filterId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /outfits/{outfitId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /hairstyles/{hairstyleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
